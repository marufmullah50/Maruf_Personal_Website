color: white;\n    border-radius: 30px; \/* oval shape *\/\n    padding: 14px 28px; \/* size *\/\n    font-size: 16px;\n    font-weight: 600;\n    text-decoration: none;\n    display: inline-block;\n    transition: transform 0.2s ease, background-color 0.2s ease;\n  }\n\n  .cv-btn:hover {\n    background-color: #0056b3;\n    transform: translateY(-2px);\n  }\n\n  @media (max-width: 640px){\n    .cv-btn {\n      padding: 12px 22px;\n      font-size: 14px;\n    }\n  }\n<\/style>\n<\/head>\n<body>\n\n<div class=\"page-wrap\">\n\n  <section id=\"about\" class=\"section-block\">\n    <div class=\"section-title\">About Me<\/div>\n    <p class=\"section-sub\">\n      I\u2019m <strong>Md. Maruf Mullah<\/strong>, a Mechanical Engineering graduate (MIST). I combine classical engineering with computational tools, machine learning, predictive modelling, and experimental material research to solve practical engineering problems.\n    <\/p>\n    <div class=\"more-area\">\n      <button type=\"button\" class=\"toggle-more\" data-target=\"about-more\">More details<\/button>\n      <div id=\"about-more\" class=\"more-content\">\n        <p style=\"margin-top:10px;\">\n          Focus areas: material densification &#038; strengthening, process improvements in manufacturing lines, and deploying lightweight ML models for classification and prediction. Portfolio highlights include a thesis on wood densification (ICMEAS 2025), a ViT-based fish-classifier app, and several hands-on mechanical projects.\n        <\/p>\n      <\/div>\n    <\/div>\n    <div style=\"text-align:center; margin-top:12px;\">\n      <a class=\"read-more\" href=\"about.html\">Read more<\/a>\n    <\/div>\n  <\/section>\n\n  <section id=\"education\" class=\"section-block\">\n    <div class=\"section-title\">Education<\/div>\n    <p class=\"section-sub\">\n      B.Sc. in Mechanical Engineering \u2014 MIST (Graduated). Strong coursework in applied mechanics, materials, and computational modelling. Consistent academic performance in STEM subjects.\n    <\/p>\n    <div class=\"more-area\">\n      <button type=\"button\" class=\"toggle-more\" data-target=\"edu-more\">More details<\/button>\n      <div id=\"edu-more\" class=\"more-content\">\n        <ul style=\"margin-top:10px; color:#111111; line-height:1.5;\">\n          <li><strong>Thesis:<\/strong> Densification of Natural Wood \u2014 process and mechanical assessment.<\/li>\n          <li><strong>Projects:<\/strong> Design and manufacturing projects using SolidWorks and lathe operations.<\/li>\n          <li><strong>Tools:<\/strong> MATLAB, ANSYS, SolidWorks, Overleaf, Google Colab.<\/li>\n        <\/ul>\n      <\/div>\n    <\/div>\n    <div style=\"text-align:center; margin-top:12px;\">\n      <a class=\"read-more\" href=\"education.html\">Read more<\/a>\n    <\/div>\n  <\/section>\n\n  <section id=\"experience\" class=\"section-block\">\n    <div class=\"section-title\">Experience<\/div>\n    <p class=\"section-sub\">\n      Industry training at IFAD Autos and PRAN Group; volunteered at academic conferences and campus career events. Practical exposure to assembly, quality checks and process improvement.\n    <\/p>\n    <div class=\"more-area\">\n      <button type=\"button\" class=\"toggle-more\" data-target=\"exp-more\">More details<\/button>\n      <div id=\"exp-more\" class=\"more-content\">\n        <p style=\"margin-top:10px;\">\n          <strong>Industrial Attachment \u2014 IFAD Autos:<\/strong> vehicle assembly, mechanical fitting, and QC procedures.<br>\n          <strong>MTO Engineer Assessment \u2014 PRAN Group:<\/strong> process mapping, identifying critical control points, and recommending productivity improvements.<br>\n          <strong>Volunteering:<\/strong> ICMEAS (conference support) and MIST Job Fair (event coordination).\n        <\/p>\n      <\/div>\n    <\/div>\n    <div style=\"text-align:center; margin-top:12px;\">\n      <a class=\"read-more\" href=\"experience.html\">Read more<\/a>\n    <\/div>\n  <\/section>\n\n  <section id=\"portfolio\" class=\"section-block\">\n    <div class=\"section-title\">Projects &#038; Research<\/div>\n    <p class=\"section-sub\">\n      A mix of mechanical design and AI: tailstock tool holder and vacuum-car hardware projects; ViT fish-classifier and U\u00b2-Net background editor apps; thesis &#038; publication on wood densification.\n    <\/p>\n    <div class=\"more-area\">\n      <button type=\"button\" class=\"toggle-more\" data-target=\"pf-more\">More details<\/button>\n      <div id=\"pf-more\" class=\"more-content\">\n        <p style=\"margin-top:10px;\">\n          <strong>Notable:<\/strong> BD Freshwater Fish Detection (ViT) with Streamlit demo, Photo Background Editor (U\u00b2-Net ONNX), Tailstock Die Tool Holder (SolidWorks + lathe), Smart Bluetooth Vacuum Car (Arduino). Thesis published at ICMEAS 2025.\n        <\/p>\n      <\/div>\n    <\/div>\n    <div style=\"text-align:center; margin-top:12px;\">\n      <a class=\"read-more\" href=\"portfolio.html\">Read more<\/a>\n    <\/div>\n  <\/section>\n\n  <section id=\"skills\" class=\"section-block\">\n    <div class=\"section-title\">Skills<\/div>\n    <p class=\"section-sub\">\n      Programming: Python, C. ML\/DL: TensorFlow, PyTorch. CAD &#038; Simulation: SolidWorks, ANSYS. Data &#038; tools: MATLAB, Google Colab.\n    <\/p>\n    <div class=\"more-area\">\n      <button type=\"button\" class=\"toggle-more\" data-target=\"skills-more\">More details<\/button>\n      <div id=\"skills-more\" class=\"more-content\">\n        <p style=\"margin-top:10px;\">\n          Experience with dataset preprocessing, model training and deployment (Streamlit). Comfortable with experimental test setups and combining experimental data with ML models (PINNs, regression, classification).\n        <\/p>\n      <\/div>\n    <\/div>\n    <div style=\"text-align:center; margin-top:12px;\">\n      <a class=\"read-more\" href=\"skills.html\">Read more<\/a>\n    <\/div>\n  <\/section>\n\n  <section id=\"contact\" class=\"section-block\">\n    <div class=\"section-title\">Contact<\/div>\n    <p class=\"section-sub\">\n      Reach out for collaborations, research, or engineering projects. I respond to messages on email and LinkedIn.\n    <\/p>\n    <div class=\"more-area\">\n      <button type=\"button\" class=\"toggle-more\" data-target=\"contact-more\">More details<\/button>\n      <div id=\"contact-more\" class=\"more-content\">\n        <p style=\"margin-top:10px;\">\n          Email: <a href=\"mailto:md.marufmullah50@gmail.com\">md.marufmullah50@gmail.com<\/a><br>\n          Phone: +8801609099183<br>\n          LinkedIn: <a href=\"https:\/\/www.linkedin.com\/in\/marufmullah50\" target=\"_blank\">marufmullah50<\/a><br>\n          GitHub: <a href=\"https:\/\/github.com\/marufmullah50\" target=\"_blank\">marufmullah50<\/a>\n        <\/p>\n      <\/div>\n    <\/div>\n    <div style=\"text-align:center; margin-top:12px;\">\n      <a class=\"read-more\" href=\"contact.html\">Read more<\/a>\n    <\/div>\n  <\/section>\n\n  <!-- Static CV Button -->\n  <div style=\"text-align:center; margin:40px 0;\">\n    <a href=\"https:\/\/drive.google.com\/uc?export=download&#038;id=FILE_ID\" \n       class=\"cv-btn\" target=\"_blank\">Download CV<\/a>\n  <\/div>\n\n<\/div>\n\n<script>\ndocument.addEventListener('DOMContentLoaded', function(){\n  const opts = { root:null, rootMargin:'0px', threshold: 0.18 };\n  const io = ('IntersectionObserver' in window) ? new IntersectionObserver((entries) => {\n    entries.forEach(e=>{\n      if(e.isIntersecting) e.target.classList.add('in-view');\n    });\n  }, opts) : null;\n\n  document.querySelectorAll('.section-block').forEach(sec=>{\n    if(io) io.observe(sec);\n    else sec.classList.add('in-view');\n  });\n\n  document.querySelectorAll('.toggle-more').forEach(btn=>{\n    btn.addEventListener('click', function(){\n      const id = btn.getAttribute('data-target');\n      const el = document.getElementById(id);\n      if(!el) return;\n      const open = el.classList.toggle('open');\n      btn.textContent = open ? 'Show less' : 'More details';\n      if(open) setTimeout(()=> el.scrollIntoView({behavior:'smooth', block:'nearest'}), 200);\n    });\n  });\n});\n<\/script>\n\n<\/body>\n<\/html>\n","protected":false},"excerpt":{"rendered":"<p>Welcome To My Personal Website Md. Maruf Mullah \u2014 Home About Me I\u2019m Md. Maruf Mullah, a Mechanical Engineering graduate (MIST). I combine classical engineering with computational tools, machine learning, predictive modelling, and experimental material research to solve practical engineering problems. More [&hellip;]<\/p>\n","protected":false},"author":1,"featured_media":0,"parent":0,"menu_order":0,"comment_status":"closed","ping_status":"closed","template":"","meta":{"footnotes":""},"class_list":["post-8","page","type-page","status-publish","hentry"],"_links":{"self":[{"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/pages\/8","targetHints":{"allow":["GET"]}}],"collection":[{"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/pages"}],"about":[{"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/types\/page"}],"author":[{"embeddable":true,"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/users\/1"}],"replies":[{"embeddable":true,"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/comments?post=8"}],"version-history":[{"count":41,"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/pages\/8\/revisions"}],"predecessor-version":[{"id":199,"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/pages\/8\/revisions\/199"}],"wp:attachment":[{"href":"http:\/\/localhost:8080\/index.php\/wp-json\/wp\/v2\/media?parent=8"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}}